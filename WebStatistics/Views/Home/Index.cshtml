@model List<WebStatisticsM.Models.StatisticModel>
@{
    ViewData["Title"] = "ETC Simulator - Statistics";
}

<div ng-controller="StatisticsAppController" ng-init="refresh()">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2 text-center">
                <h2>ETC Simulator - Statistics</h2>
            </div>
        </div>

        <hr />

        @foreach (var statistic in @Model)
        {
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2">
                    <div class="row">
                        <div class="col-xs-4">
                            @statistic.Name  @statistic.Count
                        </div>
                    </div>
                </div>
            </div>
        }
        <hr />
    </div>
</div>

<script type="text/javascript">
    setTimeout(() => { document.location.reload(); }, 5000)
</script>